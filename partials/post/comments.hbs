{{#if comments}}
<div class="popup popup-comments" data-popup-id="popup-comments" role="dialog" aria-modal="true" aria-hidden="true" aria-label="{{t "You can hide this popup with the ESC key"}}">
	<div class="popup-container">
		<div class="popup-head">
			<h2 class="popup-title">{{t 'Discussion'}}</h2>
			<button class="popup-close button button-icon button-background-100 button-sm" aria-label="{{t "Hide popup"}}">
				{{> "icons/x-close"}}
			</button>
		</div>
		<div class="popup-body post-comments">
			{{comments title="" count=false}}
		</div>
	</div>
	<button class="popup-close popup-overlay" aria-label="{{t 'Hide popup'}}"></button>
</div>
{{/if}}