<div class="card-post card-post-featured{{#if class}} {{class}}{{/if}}{{#if feature_image}} card-has-image{{/if}}{{#if has_slider}} card-has-slider{{/if}}{{#primary_author}} card-has-author{{/primary_author}}">
	{{!-- Feature image. --}}
	<a class="card-post-image" href="{{url}}" tabindex="-1">
		{{#if feature_image}}
			{{> "components/image" src=feature_image fast=image_fast alt=title}}
		{{/if}}

		<span class="card-post-image-badge">
			{{#if reading_time}}
				<span class="card-post-time">{{reading_time minute=(t "1 min read") minutes=(t "% min read")}}</span>
			{{/if}}

			{{#unless access}}
				<span
					class="card-post-icon"
					data-tippy-content="{{#has visibility="paid"}}{{t "Paid Post"}}{{else has visibility="tiers"}}{{tiers}}{{else}}{{t "For Members"}}{{/has}}"
				>
					{{> "icons/lock"}}
				</span>
			{{/unless}}
		</span>
	</a>

	<div class="card-post-content">
		{{!-- Authors. --}}
		<ul class="card-post-authors">
			{{#foreach authors limit=10}}
				<li>
					<a href="{{url}}" class="card-post-author-image" aria-label="{{name}}" data-tooltip-custom="author">
						{{> "components/avatar" size="large" src=profile_image}}
					</a>
					{{> "components/tooltip-author"}}
				</li>
			{{/foreach}}
		</ul>

		{{!-- Meta --}}
		{{#if tags}}
		<div class="card-post-meta">
			{{#foreach tags limit=3}}
				{{#unless @first}}
					<span class="card-post-meta-divider">&bull;</span>
				{{/unless}}

				<a class="card-post-tag" href="{{url}}">{{name}}</a>
			{{/foreach}}
		</div>
		{{/if}}

		{{!-- Title. --}}
		<h3 class="card-post-title"><a href="{{url}}">{{title}}</a></h3>

		{{!-- Excerpt. --}}
		{{#if custom_excerpt}}
			<div class="card-post-excerpt">{{custom_excerpt}}</div>
		{{else if excerpt}}
			<div class="card-post-excerpt">{{excerpt}}</div>
		{{/if}}

		{{!-- Read more. --}}
		<a href="{{url}}" class="card-post-button button">
			<span class="screen-reader-text">{{title}}</span>
			<span class="label">{{t "Read More"}}</span>
			{{> "icons/arrow-narrow-right"}}
		</a>

		{{!-- Navigation buttons for slider. --}}
		{{#if has_slider}}
		<div class="slider-button-wrapper">
			<div class="slider-button slider-button-prev swiper-button-disabled">{{> "icons/arrow-left"}}</div>
			<div class="slider-button slider-button-next">{{> "icons/arrow-right"}}</div>
		</div>
		{{/if}}
	</div>
</div>