{{!< default}}
{{!-- The tag above means: insert everything in this file into the body of the default.hbs template --}}

{{#author}}
	{{> "sections/hero"
		feature_image=cover_image
		image_size="200"
		title=name
		custom_excerpt=bio
		total_posts=../pagination.total
		is_author=true
	}}
{{/author}}

<section class="section section-posts-grid">
	<h2 class="screen-reader-text">{{t "Posts"}}</h2>

	{{#is "paged"}}{{pagination next=false prepend=".posts-list"}}{{/is}}
	<ul class="posts-list"{{^is "paged"}}{{#if pagination.next}} data-posts-per-page="{{@config.posts_per_page}}"{{/if}}{{/is}}>
		{{#foreach posts}}
			<li>
				{{> "components/card-post"}}
			</li>
		{{/foreach}}
	</ul>
	{{pagination type="infinite" prev=false append=".posts-list"}}
</section>
